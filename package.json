{
	"name": "exsys-backend",
	"type": "module",
	"scripts": {
		"//1": "———————————————————————————————————————————————————Build————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"build": "tsc",
		"build:clean": "npm run clean:dist && npm run build",
		"build:watch": "tsc --watch",
		"build:watch:clean": "npm run clean:dist && npm run build:watch",
		"//2": "———————————————————————————————————————————————————Start————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"start": "node \"index.js\"",
		"start:dev": "node --env-file .env \"dist/development/index.js\"",
		"start:dev:clean": "npm run clean:logs && npm run start:dev",
		"build-start:dev": "npm run build && npm run start:dev",
		"build:clean-start:dev:clean": "npm run build:clean && npm run start:dev:clean",
		"ts:start:dev": "node --env-file .env --loader ts-node/esm \"src/development/index.ts\"",
		"//3": "———————————————————————————————————————————————————TS—Test——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"ts:test": "npm run ts:test:integration && npm run ts:test:unit && npm run ts:test:devEnv",
		"ts:test:integration": "node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register --reporter spec --recursive \"src/test/integration/**/*.spec.ts\"",
		"ts:test:unit": "node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register --reporter spec --recursive \"src/test/unit/**/*.spec.ts\"",
		"ts:test:devEnv": "node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register --reporter dot --recursive \"src/test/development/**/*.spec.ts\"",
		"//4": "———————————————————————————————————————————————————Test—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"test": "npm run test:integration && npm run test:unit && npm run test:devEnv",
		"test:integration": "mocha --reporter spec --recursive \"dist/test/integration/**/*.spec.js\"",
		"test:unit": "mocha --require source-map-support/register --reporter spec --recursive \"dist/test/unit/**/*.spec.js\"",
		"test:devEnv": "mocha --require source-map-support/register --reporter dot --recursive \"dist/test/development/**/*.spec.js\"",
		"//5": "———————————————————————————————————————————————————Coverage—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"build-test:coverage": "npm run build && npm run test:coverage",
		"test:coverage": "nyc npm run test:integration",
		"//6": "———————————————————————————————————————————————————Linting——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"lint": "npx eslint \"**/*.ts\"",
		"lint:fix": "npx eslint \"**/*.ts\" --fix",
		"spellcheck": "npx cspell .",
		"//7": "———————————————————————————————————————————————————Dependencies—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"depcheck": "npx depcheck",
		"upgrade": "npm update && npx ncu -u && npm install",
		"sentry:sourcemaps": "sentry-cli sourcemaps inject --org aarhus-universitet-c9cd1e514 --project exsys-backend ./dist && sentry-cli sourcemaps upload --org aarhus-universitet-c9cd1e514 --project exsys-backend ./dist",
		"//8": "———————————————————————————————————————————————————Misc—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
		"clean:dist": "if exist dist rmdir /s /q dist",
		"clean:logs": "if exist logs rmdir /s /q logs",
		"clean:all": "npm run clean:dist && npm run clean:logs"
	},
	"dependencies": {
		"@logtail/node": "^0.5.2",
		"@sentry/cli": "^2.43.0",
		"@sentry/node": "^8.35.0",
		"@sentry/profiling-node": "^8.35.0",
		"@socket.io/redis-adapter": "^8.3.0",
		"axios": "^1.8.4",
		"bcrypt": "^5.1.1",
		"config": "^3.3.12",
		"connect-mongo": "^5.1.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"express": "^4.21.1",
		"express-mongo-sanitize": "^2.2.0",
		"express-rate-limit": "^7.5.0",
		"express-session": "^1.18.1",
		"helmet": "^8.1.0",
		"mongoose": "^8.13.2",
		"nanoid": "^5.1.5",
		"passport": "^0.7.0",
		"passport-local": "^1.0.0",
		"public-ip": "^7.0.1",
		"redis": "^4.7.0",
		"socket.io": "^4.8.1",
		"validator": "^13.15.0",
		"winston": "^3.17.0"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.2",
		"@types/chai": "^4.3.19",
		"@types/config": "^3.3.5",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/eslint": "^9.6.1",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.1",
		"@types/mocha": "^10.0.10",
		"@types/node": "^22.14.0",
		"@types/passport": "^1.0.17",
		"@types/passport-local": "^1.0.38",
		"@types/sinon": "^17.0.4",
		"@types/validator": "^13.12.3",
		"@cspell/dict-da-dk": "^4.1.0",
		"@typescript-eslint/eslint-plugin": "^8.29.1",
		"@typescript-eslint/parser": "^8.29.1",
		"chai": "^5.2.0",
		"chai-http": "^4.4.0",
		"depcheck": "^1.4.7",
		"cspell": "^8.19.2",
		"eslint": "^9.24.0",
		"eslint-plugin-local-rules": "^3.0.2",
		"mocha": "^10.7.3",
		"mongodb-memory-server": "^10.1.4",
		"npm-check-updates": "^17.1.18",
		"nyc": "^17.1.0",
		"sinon": "^17.0.1",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3"
	}
}
