{
  "name": "exsys-project",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "//1": "———————————————————————————————————————————————————Build————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "//2": "———————————————————————————————————————————————————Start————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "start:dev": "node \"dist/app/index.js\"",
    "start": "node \"index.js\"",
    "build-start:dev": "npm run build && npm run start:dev",
    "ts:start:dev": "node --loader ts-node/esm \"src/app/index.ts\"",
    "//3": "———————————————————————————————————————————————————Build—Test—Pipelines—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "build-test": "npm run build && npm run test",
    "build-test:integration": "npm run build && npm run test:integration",
    "build-test:unit": "npm run build && npm run test:unit",
    "build-test:fuzz": "npm run build && npm run test:fuzz",
    "//4": "———————————————————————————————————————————————————TS—Test——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "ts:test": "npm run ts:test:integration && npm run ts:test:unit && npm run ts:test:fuzz",
    "ts:test:integration": "cross-env NODE_ENV=test node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register --reporter spec --recursive \"src/test/integration/**/*.spec.ts\"",
    "ts:test:unit": "cross-env NODE_ENV=test node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register --reporter spec --recursive \"src/test/unit/**/*.spec.ts\"",
    "ts:test:fuzz": "cross-env NODE_ENV=test node --loader ts-node/esm node_modules/mocha/bin/mocha --require ts-node/register --reporter dot --recursive \"src/test/fuzz/**/*.spec.ts\"",
    "//5": "———————————————————————————————————————————————————Test—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "test": "npm run test:integration && npm run test:unit && npm run test:fuzz",
    "test:integration": "cross-env NODE_ENV=test mocha --reporter spec --recursive \"dist/test/integration/**/*.spec.js\"",
    "test:unit": "cross-env NODE_ENV=test mocha --reporter spec --recursive \"dist/test/unit/**/*.spec.js\"",
    "test:fuzz": "cross-env NODE_ENV=test mocha --reporter dot --recursive \"dist/test/fuzz/**/*.spec.js\"",
    "//6": "———————————————————————————————————————————————————Coverage—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "build-test:coverage": "npm run build && npm run test:coverage",
    "test:coverage": "nyc npm run test:integration",
    "//7": "———————————————————————————————————————————————————Linting——————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "lint": "npx eslint \"**/*.ts\"",
    "lint:fix": "npx eslint \"**/*.ts\" --fix",
    "//8": "———————————————————————————————————————————————————Dependencies—————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————————",
    "depcheck": "npx depcheck",
    "upgrade": "npm update && npx ncu -u && npm install"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "config": "^3.3.11",
    "express": "^4.19.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "mongoose": "^8.3.1",
    "nanoid": "^5.0.7",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/config": "^3.3.4",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.7",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "chai": "^5.1.0",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "mocha": "^10.4.0",
    "mongodb-memory-server": "^9.1.8",
    "npm-check-updates": "^16.14.18",
    "nyc": "^15.1.0",
    "sinon": "^17.0.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
