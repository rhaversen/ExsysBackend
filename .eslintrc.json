{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "standard-with-typescript",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"semi": ["error", "never"],
		"quotes": ["error", "single"],
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"@typescript-eslint/indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"@typescript-eslint/no-unused-vars": "warn",
		"no-tabs": "off"
	}
}
